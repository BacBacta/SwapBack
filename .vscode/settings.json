{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.check.command": "clippy",

  // FIX: Variables gRPC pour nouvelle infrastructure Codespaces
  "terminal.integrated.env.linux": {
    "GRPC_VERBOSITY": "error",
    "GRPC_DNS_RESOLVER": "native",
    "GRPC_TRACE": "",
    "NO_PROXY": "localhost,127.0.0.1"
  },

  // Optimisations pour Codespaces - prévention des déconnexions
  "remote.SSH.connectTimeout": 600,
  "remote.SSH.serverAliveInterval": 60,
  "remote.SSH.serverAliveCountMax": 10,
  "remote.SSH.keepAlive": true,
  "remote.SSH.useFlock": false,
  "remote.SSH.lockfilesInTmp": true,
  "remote.SSH.remoteServerListenOnSocket": true,
  "remote.autoForwardPorts": false,
  "remote.restoreForwardedPorts": true,
  "remote.downloadExtensionsLocally": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "update.mode": "none",
  "telemetry.telemetryLevel": "off",

  // Optimisation CPU + mémoire rust-analyzer
  "rust-analyzer.server.extraEnv": {
    "RA_LOG": "error",
    "RUST_BACKTRACE": "0"
  },
  "rust-analyzer.cachePriming.enable": false,
  "rust-analyzer.cargo.buildScripts.enable": false,
  "rust-analyzer.checkOnSave.enable": false,
  "rust-analyzer.diagnostics.enable": false,
  "rust-analyzer.inlayHints.enable": false,
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.completion.autoimport.enable": false,
  "rust-analyzer.cargo.autoreload": false,
  "rust-analyzer.procMacro.enable": false,

  // Optimisation CPU TypeScript
  "typescript.tsserver.maxTsServerMemory": 2048,
  "typescript.tsserver.useSeparateSyntaxServer": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.surveys.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.suggest.enabled": false,

  // Configuration SonarLint
  "sonarlint.disableTelemetry": true,
  "sonarlint.ls.javaHome": "/usr/lib/jvm/java-21-openjdk-amd64",

  // Auto-save pour éviter les pertes lors des déconnexions
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/target": true,
    "**/.anchor": true
  },

  // Optimisations CPU supplémentaires
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/target/**": true,
    "**/.anchor/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/out/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/*.lock": true
  },

  // Désactiver features gourmandes CPU
  "editor.suggest.showStatusBar": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.semanticHighlighting.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.guides.indentation": false,

  // Désactiver Copilot suggestions inline (garde chat)
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "toml": true
  },

  // Désactiver ESLint auto-fix sur save (garde validation)
  "eslint.format.enable": false,

  // Git optimizations
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.postCommitCommand": "none",

  // Terminal optimizations
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.enableFileLinks": "off"
}
