# SwapBack Frontend Environment Variables

# Admin Authority - wallet that can access /app/admin
# On devnet, if not set, any connected wallet can access admin
NEXT_PUBLIC_ADMIN_AUTHORITY=YOUR_ADMIN_WALLET_ADDRESS_HERE

# Analytics Configuration
# Set to 'true' to enable analytics tracking (Mixpanel)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Mixpanel Token (get from https://mixpanel.com/)
# Required if NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# Optional server-side Mixpanel token for backend events
MIXPANEL_SERVER_TOKEN=your_server_side_mixpanel_token_here

# Helius API Configuration
# Get your API key from https://www.helius.dev/
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here

# Solana Network Configuration - DEVNET for testing
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Program IDs - DEVNET (deployed programs)
NEXT_PUBLIC_ROUTER_PROGRAM_ID=9ttege5TrSQzHbYFSuTPLAS16NYTUPRuVpkyEwVFD2Fh
