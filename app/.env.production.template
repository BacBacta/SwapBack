# ============================================================================
# VERCEL PRODUCTION - Mainnet Configuration
# ============================================================================
# Copier ces variables dans Vercel Dashboard > Settings > Environment Variables
# Environnement: Production

# Jupiter API
JUPITER_API_URL=https://quote-api.jup.ag/v6
USE_MOCK_QUOTES=false

# Solana Network (MAINNET)
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# RPC URL - IMPORTANT: Utiliser un provider premium pour production
# Option 1: Helius (Recommandé - 100k requests/jour gratuit)
NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Option 2: QuickNode
# NEXT_PUBLIC_SOLANA_RPC_URL=https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_TOKEN/

# Option 3: Alchemy
# NEXT_PUBLIC_SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Option 4: Public (NE PAS UTILISER EN PROD - Rate limits)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Program IDs (À METTRE À JOUR avec vos IDs mainnet après déploiement)
NEXT_PUBLIC_ROUTER_PROGRAM_ID=YOUR_MAINNET_ROUTER_PROGRAM_ID
NEXT_PUBLIC_BUYBACK_PROGRAM_ID=YOUR_MAINNET_BUYBACK_PROGRAM_ID
NEXT_PUBLIC_CNFT_PROGRAM_ID=YOUR_MAINNET_CNFT_PROGRAM_ID

# Token Addresses (Mainnet)
# BACK Token - À mettre à jour avec votre mint mainnet
NEXT_PUBLIC_BACK_MINT=YOUR_MAINNET_BACK_TOKEN_MINT

# USDC Mainnet (officiel)
NEXT_PUBLIC_USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Infrastructure (À mettre à jour)
NEXT_PUBLIC_MERKLE_TREE=YOUR_MAINNET_MERKLE_TREE
NEXT_PUBLIC_COLLECTION_CONFIG=YOUR_MAINNET_COLLECTION_CONFIG

# Platform Fees
NEXT_PUBLIC_PLATFORM_FEE_BPS=20
NEXT_PUBLIC_PLATFORM_FEE_PERCENT=0.20

# Build Configuration
HUSKY=0
