{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": [
    "scripts/**/*.ts",
    "app/src/lib/native-router/headless/**/*.ts",
    "app/src/config/**/*.ts",
    "app/src/sdk/config/**/*.ts"
  ]
}
